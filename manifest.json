{
    "name": "Skip To Recipe",
    "version": "1.0",
    "description": "A Chrome extension that finds and displays the food recipe for any web page.",
    "manifest_version": 2,
    "permissions": ["activeTab"],
    "options_page": "main.html",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["main.js"],
            "css": ["main.css"]
        }
    ]
}